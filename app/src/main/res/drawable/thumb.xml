<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" >
        <shape android:shape="oval">
            <solid android:color="@color/checked_thumb"/>
            <stroke android:width="10dp" android:color="@color/checked_thumb"/>
            <size android:height="40dp" android:width="40dp"/>
        </shape>
    </item>

    <item android:state_checked="false" >
        <shape android:shape="oval">
            <solid android:color="@color/unchecked_thumb"/>
            <stroke android:width="10dp" android:color="@color/unchecked_thumb"/>
            <size android:height="40dp" android:width="40dp"/>
        </shape>
    </item>

</selector>